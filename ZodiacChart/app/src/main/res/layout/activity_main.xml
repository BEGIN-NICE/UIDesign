<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fanxh.zodiacchart.MainActivity">

    <Button
        android:id="@+id/next_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorOrange"
        android:text="one" />

    <Button
        android:id="@+id/second_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/next_activity"
        android:layout_centerHorizontal="true"
        android:background="@color/colorOrange"
        android:text="two" />
    <Button
        android:id="@+id/design_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_ui"
        android:layout_centerHorizontal="true"
        android:background="@color/colorOrange"
        android:text="view" />

</RelativeLayout>
